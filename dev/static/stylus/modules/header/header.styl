header
  display: flex
  align-items: center
  justify-content: center
  margin-top: 15px

.header-content
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  
.nav
  display: flex;
  justify-content: space-around;

.nav-header
  width: 50%

.nav-li-header
  transition: 0.3s ease-in-out
  &:before, &:after
    display: inline-block;
    content: ''
    position: absolute;
    top: 50%
    transform translate(0%,-50%)
    right: -10px
    opacity: 1
    width: 4px
    height: 4px
    border-radius: 50px
    position: absolute;
    background: blue
    transition: 0.3s ease-in-out
    opacity: 0

.nav-li-header
  &:before
    left: -10px
  &:hover:before
    opacity: 1
  &:hover:after
    opacity: 1
.nav-li-header
  position: relative;
  &:hover .nav-link-header
    transition: 0.3s ease-in-out
    color: blue
  &:hover .nav-link-header:before
    transition: 0.3s ease-in-out
    opacity: 1


.nav-link-header
  Link-Text-Style()
  transition: 0.3s ease-in-out
  position: relative;
  &:before
    content: ''
    opacity: 0
    width: 100%
    height: 1px
    position: absolute;
    bottom: 2px
    left: 0
    background: blue
    transition: 0.3s ease-in-out
  &:hover:before
    transition: 0.3s ease-in-out
    opacity: 1

.cart
  display: flex;

.cart-link
  Link-Text-Style()
  margin-right: 5px

.chart-icon
  height: 19px
  width: 24px
  margin-right: 10px

.cart-items-amount
  font-family: montserratFont
  font-size: rem(14px)
  color: #969696
