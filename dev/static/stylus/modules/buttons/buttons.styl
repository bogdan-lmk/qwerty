.btn
  position: relative;
  background: transparent
  width: 230px
  max-width: 230px
  padding: 15px 0
  transform: translate3d(0,0,0);
  transition-animation()
  Link-Text-Style()
  z-index: 9999
  &:hover
    transition-animation()
    cursor: pointer;
    transform: translate3d(-3px,-3px,0);

.btn-wrap
  position: relative;
  z-index: 9999
  &:before
    content: ''
    position: absolute;
    width: 100%
    height: 100%
    max-width: 230px
    left: 7px
    bottom: -7px
    display: flex;
    background: white

.btn-wrap--column
  margin-bottom: 15px

.btn-wrap--row
  margin-right: 30px

.btn-wrap--blue
  &:before
    border: 2px solid skyblue

.btn-wrap--pink
  &:before
    border: 2px solid pink

.btn-wrap--yellow
  &:before
    border: 2px solid yellow

.btn--blue
  border: 2px solid skyblue
  background: white
  z-index: 99
  &:hover
    background: skyblue
    color: white
    transition-animation()
  &:focus
    background: blue
    color: white
    border: 2px solid blue





.btn--pink
  border: 2px solid pink
  background: white
  z-index: 99
  &:hover
    background: pink
    color: white
    transition-animation()
  &:focus
    background: pink
    color: white
    border: 2px solid pink

.btn--yellow
  border: 2px solid yellow
  background: white
  z-index: 99
  &:hover
    background: yellow
    color: white
    transition-animation()
  &:focus
    background: yellow
    color: white
    border: 2px solid yellow

.btn-add-to-chart
    width: 100%;
    border: none;
    color: white
    text-transform: uppercase;
    background: skyblue
    font-size: rem(14px)
    padding: 20px 0
    cursor: pointer;
    text-align: center;

.btn-wrap--footer
  &:before
    max-width: 310px

.btn-footer
  max-width: 310px
  width: 310px

.footer-content-bottom-wrap
  width: 100%
  display: flex;
  justify-content: space-between;
