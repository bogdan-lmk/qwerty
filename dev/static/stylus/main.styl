@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'
@import 'animate.css'


html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family montserratFont, oswaldFont, sans-serif
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative
	display: flex;
	flex-direction: column;
	align-items: center;
input,
select,
button
	outline none

img
	max-width 100%

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	display: flex;
	max-width: 1280px
	width: 100%
	padding: 0 20px
